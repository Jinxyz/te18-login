extends layout

block content
  main.container.d-flex.justify-content-center.align-items-center.h-100.w-100.flex-column
    form.form-signin(action="/login", method="post")
      h1.text-center.pb-3 To access the home page, sign in below! ❌🧢
      .mb-3
        label.form-label.visually-hidden(for="username")
        input#username.form-control.text-center(placeholder="🐱‍🚀Username🐱‍🏍" type="text", name="username", value=username ? username : '', class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Username or Password is invalid
      .mb-3
        label.form-label.visually-hidden(for="password")
        input#password.form-control.text-center(placeholder="👶Password👴" type="password", name="password" class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Username or Password is invalid

      button.w-100.btn.btn-primary(type="submit") Sign in